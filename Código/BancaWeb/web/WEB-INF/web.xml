<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>procesarLogin</servlet-name>
        <servlet-class>servlets.procesarLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cerrarSesion</servlet-name>
        <servlet-class>servlets.cerrarSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>consultaSaldo</servlet-name>
        <servlet-class>servlets.consultaSaldo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ingresarUsuario</servlet-name>
        <servlet-class>servlets.ingresarUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>pagarServicios</servlet-name>
        <servlet-class>servlets.pagarServicios</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ingresarCuenta</servlet-name>
        <servlet-class>servlets.ingresarCuenta</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>recuperarPassword</servlet-name>
        <servlet-class>servlets.recuperarPassword</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>realizarTransferencia</servlet-name>
        <servlet-class>servlets.realizarTransferencia</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>visualizarMovimientos</servlet-name>
        <servlet-class>servlets.visualizarMovimientos</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>procesarLogin</servlet-name>
        <url-pattern>/procesarLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cerrarSesion</servlet-name>
        <url-pattern>/cerrarSesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>consultaSaldo</servlet-name>
        <url-pattern>/consultaSaldo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ingresarUsuario</servlet-name>
        <url-pattern>/ingresarUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>pagarServicios</servlet-name>
        <url-pattern>/pagarServicios</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ingresarCuenta</servlet-name>
        <url-pattern>/ingresarCuenta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>recuperarPassword</servlet-name>
        <url-pattern>/recuperarPassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>realizarTransferencia</servlet-name>
        <url-pattern>/realizarTransferencia</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>visualizarMovimientos</servlet-name>
        <url-pattern>/visualizarMovimientos</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
